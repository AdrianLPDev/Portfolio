---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/exo-2";
import "@fontsource-variable/karla";
import "@fontsource/rajdhani";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="px-4">
    <div class="fixed left-0 top-0 -z-10 h-full w-full">
      <div
        class="absolute inset-0 -z-10 h-fu100% w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
      >
      </div>
    </div>
    <div
      class="relative mx-auto h-screen w-full max-w-7xl px-6 md:px-8 lg:px-12"
    >
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Karla Variable", "Rajdhani", "Exo 2 Variable", system-ui,
      sans-serif;
    background: #3a1d86;
  }

  body {
    /* Display */
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 100vh;
    /* Fuente */
    font-family: "Karla Variable", "Rajdhani", "Exo 2 Variable", sans-serif;
    color: white;
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
