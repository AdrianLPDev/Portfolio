---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../components/icons/Github.astro";
import Mail from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
---

<Layout
  title="Portfolio Adrián López - Desarrollador y Programador Web"
  description="Contrata a Adrián López - Desarrollador y Programador Web para ayudar a crear tu aplicación web. Creación de aplicaciones Web."
>
  <main>
    <SectionContainer class="parent pt-40 pb-0">
      <img
        class="img size-20 rounded-full"
        src="https://media.licdn.com/dms/image/C5603AQEoBKtVCFskRQ/profile-displayphoto-shrink_800_800/0/1635428384893?e=2147483647&v=beta&t=ShwsElyXwtvWIsPFBin4pslN2yM9J0Up-aO7ow2Qceo"
        alt="Adrian Lopez Foto"
      />
      <h1
        class="text1 text-white text-4xl font-extrabold inline-flex flex-row items-center gap-4 with-100vw"
      >
        ¡Hola!
      </h1>
      <h2
        class="text2 text-white text-3xl font-extrabold inline-flex flex-row items-center gap-5"
      >
        Soy Adrián López
        <div class="my-5 flex justify-center items-center">
          <Badge
            href="https://www.linkedin.com/in/adri%C3%A1n-l%C3%B3pez-desarrollo-web/"
            class="my-5 flex items-start"
          >
            Disponible para trabajar
          </Badge>
        </div>
      </h2>
      <h3 class="text3 text-white text-xl">
        <span>+2 años de Experiencia.</span>
        <span class="text-yellow-200/80"> Desarrollador web</span>.
        <span class="text-purple-100/80"> De Valladolid, España</span>.
        <span class="opacity-80">En continuo aprendizaje.</span>
      </h3>
    </SectionContainer>

    <nav class="w-full lg:w-[740px] mx-auto pb-40">
      <ul class="w-full lg:w-[740px] mx-auto flex flex-row items-center gap-5">
        <li>
          <SocialPill
            href="https://www.linkedin.com/in/adri%C3%A1n-l%C3%B3pez-desarrollo-web/"
          >
            <LinkedInIcon class="size-6" />
            LinkedIn
          </SocialPill>
        </li>
        <li>
          <SocialPill href="https://github.com/Kratogans">
            <GitHub class="size-6" />
            Github
          </SocialPill>
        </li>
        <li>
          <SocialPill href="mailto:adrianlopezpastor@gmail.com">
            <Mail class="size-6" />
            AdrianLopezPastor@gmail.com
          </SocialPill>
        </li>
      </ul>
    </nav>

    <SectionContainer class="pb-0">
      <h2
        class="text-white text-2xl font-semibold mb-5 flex gap-x-2 items-center"
      >
        <Briefcase class="size-5" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <!-- <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileCheck class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer> -->
  </main>
</Layout>

<style>
  .img {
    grid-area: 1 / 1 / 2 / 2;
  }
  .text1 {
    grid-area: 2 / 1 / 3 / 2;
  }
  .text2 {
    grid-area: 2 / 2 / 3 / 3;
  }
  .text3 {
    grid-area: 3 / 1 / 4 / 3;
  }
</style>
