---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
---

<Layout title="Portfolio Adrián López">
  <main>
    <section class="parent w-full lg:w-[740px] mx-auto py-40">
      <img
        class="img w-12 h-12 rounded-full"
        src="https://media.licdn.com/dms/image/C5603AQEoBKtVCFskRQ/profile-displayphoto-shrink_800_800/0/1635428384893?e=2147483647&v=beta&t=ShwsElyXwtvWIsPFBin4pslN2yM9J0Up-aO7ow2Qceo"
        alt="Adrian Lopez Foto"
      />
      <h1
        class="text1 text-white text-4xl font-extrabold inline-flex flex-row items-center gap-4 with-100vw"
      >
        ¡Hola!
      </h1>
      <h2
        class="text2 text-white text-3xl font-extrabold inline-flex flex-row items-center gap-4"
      >
        Soy Adrián López <div class="my-5 flex justify-center items-center">
          <Badge>Disponible para trabajar</Badge>
        </div>
      </h2>
      <h3 class="text3 text-white text-xl">
        2 años de Experiencia. Desarrollador web. De Valladolid, España
      </h3>
    </section>
  </main>
</Layout>

<style>
  .parent {
    display: grid;
    grid-template-columns: 1fr 5fr;
    grid-template-rows: repeat(3, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  }

  .img {
    grid-area: 1 / 1 / 2 / 2;
  }
  .text1 {
    grid-area: 2 / 1 / 3 / 2;
  }
  .text2 {
    grid-area: 2 / 2 / 3 / 3;
  }
  .text3 {
    grid-area: 3 / 1 / 4 / 3;
  }
</style>
